<%= render 'shared/jumbotron', content: 'Change My Password' %>

<div class="container">
	<div class="row">
		<div class="col-sm-offset-3 col-sm-6">
			<%= form_for @user, url: { action: :update_password } do |f| %>
				<%= render 'shared/display_flash_errors' %>

				<div class="field-wrapper">
					<div class="password">
						<label for="password">Password</label>
					  <input type="password" name="user[password]" id="password" class="form-control" placeholder="Password">
					</div>
					<div class="password_confirmation">
					  <input type="password" name="user[password_confirmation]" id="password-confirmation" class="form-control" placeholder="Password confirmation">
					</div>
				</div>
				<div class="submit">
		      <%= f.submit 'Submit', class: 'btn' %>
		    </div>
		  <% end %>
		</div>
	</div>
</div>